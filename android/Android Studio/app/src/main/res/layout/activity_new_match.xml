<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.getpebble.WrestlingWatch.NewMatchActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/weight_class_layout"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Class: "
            android:textSize="50dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_classes"
        android:layout_centerHorizontal="true">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/wrestler1"
        android:layout_below="@id/weight_class_layout"
        android:layout_centerHorizontal="true">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrestler1_name"
        android:hint="Wrestler 1 Name"

        android:textSize="50dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrestler1_club"
        android:layout_toRightOf="@id/wrestler1_name"></Spinner>

    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/wrestler2"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/wrestler1">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrestler2_name"
        android:hint="Wrestler 2 Name"

        android:textSize="50dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrestler2_club"

        android:layout_toRightOf="@id/wrestler2_name"></Spinner>

</LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/referee_name"
        android:hint="Referee Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wrestler2"
        android:textSize="50dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/referee_name"
        android:id="@+id/new_match_button"
        android:text="Continue"
        android:background="#ff3367d6"/>

</RelativeLayout>
